{{> navbar logged=logged currUserObject=currUserObject}}

<div class="margin-top-wrapper">
    {{#if logged}}
    {{> post-box}}
    {{/if}}

    
    <div class="container">



        {{#if searchQuery}}

            {{#if posts}}
                <h2> Search Results for: "{{searchQuery}}"</h2>

            {{else}}

                <h2> No Search Results for: "{{searchQuery}}"</h2>
            {{/if}}

        {{/if}}

        
        <div class="col-12" id="posts">

                {{#each posts}}
                    <div class="card post" value={{idString}}>
                        <div class="card-body">
                            <div class="container post-body-top-div">
                                <div class="group">
                                    <div class="dp-div">
                                        <img src="{{dpUrl}}" alt="">
                                    </div>

                                    <a href="/users/{{user}}/posts" class="text-decoration-none">
                                        <h3 class="post-username">{{user}}</h3>
                                    </a>

                                    {{#if isEdited}}
                                    <p class="edit-indicator">Edited</p>
                                    {{/if}}
                                </div>

                                <div class="tag">
                                    <p>{{tag}}</p>
                                </div>
                            </div>
                            <h2 class="post-title">
                                <a href="/posts/{{_id}}" class="text-decoration-none text-reset">
                                    {{title}}
                                </a>
                            </h2>

                            <p class="card-text post-body-text">
                                {{postContent}}
                            </p>


                            <div class="col post-actions-div">
                                <div class="score-count-div">
                                    <p class="score-count upvote-count">{{upCount}}</p>
                                </div>
                                <i class="bi bi-arrow-up-short post-icon h1"></i>
                                <div class="score-count-div">
                                    <p class="score-count downvote-count">{{downCount}}</p>
                                </div>
                                <i class="bi bi-arrow-down-short post-icon h1"></i>
                            </div>
                        </div>
                    </div>
                {{/each}}

        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>

<script src="card.js"></script>
<script src="write.js"></script>